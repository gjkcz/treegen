Zkratky: {
	ctrl+backspace  =	smaz slovo
	ctrl+d			=	zdvoj řádek
	ctrl+shift+d	=	smaž řádek
	shift+enter		=	nový řádek odkudkoliv
	ctrl+shift+enter=	nový řádek nad kurzor odkudkoliv  ### Není v CodeBlocks
	ctrl+{}			=	odsadí aktuálně zaměřený řádek ### Není v CodeBlocks
	ctrl+shift+↑	=	přesune řádek ↑
	ctrl+shift+↓	=	přesune řádek ↓

	pro sublime: {
		alt+číslo	=	přehodí zaměření na jiný tab
	}

	pro git: {
		git update-index --[no-]assume-unchanged path/to/file.txt
		git mergetool	=	spustí vimdiff2
		git stash		= 	ulozi nekomitle veci
		git stash apply stash@{2}, cim vetsi cislo tim starsi
		git stash pop ... apply a odeber
		git checkout -b =	nova vetev s prepnutim
		git branch -d branchname
		git config	
		ve vimdiffu musis dat :, pro zadani prikazu
		:qa				=	odejde, selze se zmenami 
		:qa!
		do				=	vezme zmeny z jineho okna
		dp				=	da zmeny z aktivniho okna jinam
		]c 				=	skoc na dalsi zmenu
		[c 				=	--.-- na predchozi
		d 				=	smaze radek
		:wq				= 	write and quit
	}

	pro mingw32: {
		compiler options:
			-w 			=	inhibits all warnings
			-fsyntax-only=	check code for syntax errors only, neudela vubec nic vic, ani objekty
			-Wall		=	all warnings on
			-std=c++11	=	povoli podporu c++11
			-std=gnu++1y=	--.--		   c++14
	}

	pro VS10: {

	}

	pro CodeBlocks: {
		ctrl+e 		=	vybere další vyskytlý prvek
		F1			=	zkompiluj soubor
		F4			=	spusť
		F2			= 	log
		F3			=	najdi dalsi
		F7			=  	dalsi radek
		F8			= 	build
		F9			= 	build a spust
		F10			= 	rebuild
		F11			=	prehod hlavicku/zdrojak
		F12			= 	prehod aktualni blok
		alt+x		= 	vyjmi radek
		alt+c 		= 	zkopiruj radek
		alt+v 		=	vloz pred aktualni radek
		ctrl+num-	=	zabal vse
		ctrl+num+	=	rozbal vse
		ctrl+k		=	naformatuj vyber 
		ctrl+.      =	radkovy comment
		ctrl+\		= 	cppcheck
		ctrl+shift+b=	blok komentar
		ctrl+0		=	goto matching brace

		class ctrl+j
		cout
		do
		for
		forb
		guard
		if
		ifb
		ife
		ifei
		now
		nowl
		nowlu
		nowu
		struct
		switch
		try
		tday
		tdayu
		today
		todayu
		wdu
		while
		whileb

		fungují na:
		C3 CodeBlocks
	}

	pro UnrealCommander: {
		windows + backspace = globalni volani
		F8 					= symlink
	}
}
